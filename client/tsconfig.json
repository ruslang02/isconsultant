{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "rootDirs": [
      ".",
      "../common"
    ],
    "noEmit": true,
    "paths": {
      "@common/*": [
        "../common/*"
      ]
    },
    "baseUrl": ".",
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": false,
    "tsBuildInfoFile": "../dist/client.tsbuildinfo"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../common/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
